<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dicoding.submission.reihannudin.pt1.rev">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".application.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".application.DetailActivity"
            android:exported="false"
            android:parentActivityName=".application.HomeActivity" />
        <activity
            android:name=".application.AboutActivity"
            android:exported="false"
            android:parentActivityName=".application.HomeActivity" />
        <activity
            android:name=".application.SplashScreenActivity"
            android:theme="@style/Theme.MyApplicationSplash"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>